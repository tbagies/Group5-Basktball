            <Setter Property="StrokeThickness" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="100"/>
